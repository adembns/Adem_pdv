{% extends 'base.html.twig' %}

{% block title %}Article1 index{% endblock %}

{% block body %}
<div class="col-lg-10 col-md-10 col-sm-9 col-lg-push-2 col-md-push-2 col-sm-push-3">
    <div class="row mrg-0 mrg-top-20">
        <div class="tr-single-box">
            <div class="tr-single-header">
                <h3 class="dashboard-title">Article1 index</h3>
            </div>
            <div class="tr-single-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Contenu</th>
                                <th>Image</th>
                                <th>Created</th>
                                <th>Updated</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for article1 in article1s %}
                            <tr>
                                <td>{{ article1.id }}</td>
                                <td>{{ article1.contenu|split(' ')|slice(0, 3)|join(' ') }}</td>
                                <td>{{ article1.image }}</td>
                                <td>{{ article1.created ? article1.created|date('Y-m-d') : '' }}</td>
                                <td>{{ article1.updated ? article1.updated|date('Y-m-d') : '' }}</td>
                                <td>
                                    <a href="{{ path('app_article1_edit', {'id': article1.id}) }}" class="btn btn-warning btn-xs">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                     <a href="{{ path('app_article1_new') }}" class="btn btn-success"><i class="fa fa-plus"></i> Create new</a>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
